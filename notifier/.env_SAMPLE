
##
##  SENDGRID CONFIG
##

# key for the sendgrid account to use, found here: https://app.sendgrid.com/settings/api_keys
SENDGRID_KEY=SG.XX_XXXXXXXXXXXXXXXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXX_XXXXXXXXXXXXXX

# NOT the id found here: https://app.sendgrid.com/settings/api_keys, instead uncomment "right from sg" line and use the "list_id"

# id for the TT unsubscribers list, found here: https://app.sendgrid.com/settings/api_keys
SENDGRID_UNSUBSCRIBE_GROUP_ID=12345

SG_FROM_EMAIL=your.name@yourdomain.com

##
##  MONGO DATABASE CONFIG
##

DATABASE_NAME=gg_db

MONGO_COLLECTION=gg_analyzed_results

# Local
MONGO_URI=mongodb://localhost:27017/

# PROD

##
##  "DEV MODE" CONFIG
##

# controls sending to everyone or ONLY single gmail
SEND_TO_ONLY_ADMIN=true

ADMIN_EMAIL=youremail@gmail.com

# sends to literally no one if false (even admin emails)
DISABLE_ALL_MESSAGE_SENDING=false
